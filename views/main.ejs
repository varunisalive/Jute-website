    <div class="container">
      <h1 class="title">Input Form</h1>

  <div class="card">
      <div class="card-body">

        <form class="" action="/userinfo" method="POST">
          <div class="form-row">

              <div class="form-group col-md-6">
                <label class="label-register" for="username">UserID</label>
                <input type="text" class="form-control" name="userID">
              </div>
              <div class="form-group col-md-6">
                <label class="label-register" for="username">TenderID</label>
                <input type="text" class="form-control" name="tenderID">
              </div>
              <div class="form-group col-md-6">
                <label class="label-register">Tender Start Date</label>
                <input type="date" class="form-control" name="tenderStartDate" placeholder="Enter Start Date">
              </div>
              <div class="form-group col-md-6">
                <label class="label-register">Tender End Date</label>
                <input type="date" class="form-control" name="tenderEndDate" placeholder="Enter End date">
              </div>
              <div class="form-group col-md-6">
                <label class="label-register">Jute Types</label>
                <input type="text" class="form-control" name="juteTypes" placeholder="Enter Jute Types">
              </div>
              <div class="form-group col-md-6">
                <label class="label-register">Total Mill Workers</label>
                <input type="text" class="form-control" name="totalMillWorkers" placeholder="Enter Total number of mill workers">
              </div>
              <div class="form-group col-md-6">
                <label class="label-register" >No. of Workers Absent</label>
                <input type="text" class="form-control" name="workersAbsent" placeholder="Enter number of workers absent">
              </div>
              <div class="form-group col-md-6">
                <label class="label-register">Mill Workers wage/day</label>
                <input type="text" class="form-control" name="millWorkersWage" placeholder="Enter Mill workers wage per day">
              </div>
              <div class="form-group col-md-6">
                <label class="label-register">Total Jute Farmers</label>
                <input type="text" class="form-control" name="totalJuteFarmers" placeholder="Enter Total number of Jute Farmers">
              </div>
              <div class="form-group col-md-6">
                <label class="label-register">No. of Farmers Absent</label>
                <input type="text" class="form-control" name="farmersAbsent" placeholder="Enter number of farmers absent">
              </div>
              <div class="form-group col-md-6">
                <label class="label-register">Jute Farmers wage/day</label>
                <input type="text" class="form-control" name="farmerWage" placeholder="Enter Farmers wage per day">
              </div>
        </form>











